<h1>Ajout d'un nouveau restaurant</h1>

<%# <%= render "form", restaurant: @restaurant %>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category,  collection: Restaurant::CATEGORIES %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", restaurants_path, class: "btn btn-success" %>
